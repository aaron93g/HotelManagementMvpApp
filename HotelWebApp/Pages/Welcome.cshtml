@page
@model HotelWebApp.Pages.WelcomeModel
@{
    ViewData["Title"] = "Middle Earth Motel";
}

<div class="text-center">
    <h1 class="display-5">Book your visit to Middle Earth</h1>
    
    <form method="post">
        <div class="container">
            <div class="row mt-3 justify-content-sm-center">
                <div class="col col-md-2">
                    <label asp-for="@Model.StartDate" for="inputDate1">Start Date</label>
                    <input asp-for="@Model.StartDate" type="date" class="form-control" id="inputDate1">
                </div>
                <div class="col col-md-2">
                    <label asp-for="@Model.EndDate" for="inputDate2">End Date</label>
                    <input asp-for="@Model.EndDate" type="date" class="form-control" id="inputDate2">
                </div>
            </div>
            
            <div class="row mt-3">
                <div class="col">
                    <button class="btn btn-primary">submit</button>
                </div>
            </div>
        </div>  
    </form>

    @if(Model.RoomOptions?.Count > 0)
    {
        <div class="container justify-content-center w-50">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Title</th>
                        <th scope="col">Description</th>
                        <th scope="col">Price</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var roomType in Model.RoomOptions)
                    {
                        <tr>
                            <td>@roomType.Title</td>
                            <td>@roomType.Description</td>
                            <td>@string.Format("{0:C}", roomType.Price)</td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>

        <form method="post">
            <div class="container">
                <div class="row justify-content-center">
                    <h4>Choose how many rooms you would like:</h4>
                    <div class="col col-sm-2">
                        <label class="" for="selectRoom1">1 king size bed per room:</label>
                        <select asp-for="@Model.roomType1Choice" class="form-select" id="selectRoom">
                            
                            @for (int i = 0; i <= Model.TypeCount.roomType1; i++)
                            {
                                <option>@i</option>
                            }
                            
                        </select>
                    </div>
                    <div class="col col-sm-2">
                        <label class="" for="selectRoom2">2 full size bed per room:</label>
                        <select asp-for="@Model.roomType2Choice" class="form-select" id="selectRoom">

                            @for (int i = 0; i <= Model.TypeCount.roomType2; i++)
                            {
                                <option>@i</option>
                            }

                        </select>
                    </div>
                    <div class="row mt-3">
                        <div class="col">
                            <button id="selectRoom" class="btn btn-primary">submit</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    }


    
</div>
